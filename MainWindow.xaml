<Window x:Class="GreenResourceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenResourceMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="StartButton" Content="Start" Width="100" Height="41" Margin="-628,4,8,0" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Stop" Width="100" Height="41" Margin="-400,-41,8,0" Click = "StopButton_Click" />
        </StackPanel>

        <DataGrid x:Name="ProcessesGrid" Margin="8,48,8,8"
            AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="60"/>
                <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="*"/>
                <DataGridTextColumn Header="CPU %" Binding="{Binding CpuPercent}" Width="80"/>
                <DataGridTextColumn Header="Memory" Binding="{Binding WorkingSetReadable}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
